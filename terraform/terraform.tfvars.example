# AWS Configuration
aws_region  = "il-central-1"
environment = "prod"

# Domain
domain_name = "daatan.com"

# SSH Access
ssh_key_name     = "daatan-key"
allowed_ssh_cidr = "YOUR_IP_ADDRESS/32"  # Replace with your IP, e.g., "203.0.113.50/32"

# Instance Type
ec2_instance_type = "t3.nano"  # 0.5GB RAM, ~$4/month

# NOTE: PostgreSQL password is set in .env file on EC2, not in Terraform
# After deployment, SSH into EC2 and create ~/app/.env with:
#   POSTGRES_PASSWORD=your_secure_password_here
