// Prisma Schema for DAATAN
// Forecast/Prediction Market Platform

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER & AUTHENTICATION
// ============================================

enum UserRole {
  USER
  RESOLVER
  APPROVER
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String? // Avatar URL from Google

  // Custom profile fields
  username             String? @unique
  slug                 String? @unique // URL-friendly identifier (e.g., "john-doe")
  website              String?
  twitterHandle        String?
  emailNotifications   Boolean @default(true)
  preferredLanguage    String  @default("en") @db.VarChar(10) // ISO 639-1 code (en, he, etc.)
  isPublic             Boolean @default(true)
  
  // Roles
  role                 UserRole @default(USER)

  // Scoring & Currency
  rs          Float @default(100) // Reputation Score (starts at 100)
  cuAvailable Int   @default(100) // Confidence Units available to commit
  cuLocked    Int   @default(0) // Confidence Units locked in active predictions

  // Bot flag
  isBot Boolean @default(false)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]

  // Bot relation
  botConfig BotConfig?

  // Prediction system relations
  predictions         Prediction[] // Predictions authored by user
  commitments         Commitment[] // User's CU commitments
  withdrawals         CommitmentWithdrawal[] // Exited commitments
  cuTransactions      CuTransaction[] // CU ledger entries
  resolvedPredictions Prediction[]    @relation("ResolvedBy")

  // Comments & reactions
  comments        Comment[]
  commentReactions CommentReaction[]

  // Notifications
  notifications          Notification[]
  notificationPreferences NotificationPreference[]
  pushSubscriptions      PushSubscription[]

  @@map("users")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// NEWS ANCHORS (Context for predictions)
// ============================================

model NewsAnchor {
  id String @id @default(cuid())

  // Source information (snapshot - immutable after creation)
  url         String    @db.VarChar(2000)
  urlHash     String    @unique @db.VarChar(64) // SHA-256 hash for deduplication
  title       String    @db.VarChar(500)
  source      String?   @db.VarChar(200) // e.g., "Reuters", "BBC"
  publishedAt DateTime?

  // Snapshot of article content at time of anchor creation
  snippet  String? @db.Text // First ~500 chars of article
  imageUrl String? @db.VarChar(2000)

  createdAt DateTime @default(now())

  // Relations
  predictions Prediction[]

  @@index([createdAt])
  @@map("news_anchors")
}

// ============================================
// TAGS (Categorization)
// ============================================

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique @db.VarChar(50) // e.g., "Politics", "AI", "Crypto"
  slug      String   @unique @db.VarChar(50) // e.g., "politics", "ai", "crypto"
  createdAt DateTime @default(now())

  predictions Prediction[]

  @@map("tags")
}

// ============================================
// PREDICTIONS (New system)
// ============================================

enum OutcomeType {
  BINARY // will happen / won't happen
  MULTIPLE_CHOICE // one option out of N
  NUMERIC_THRESHOLD // metric crosses a defined value
}

enum PredictionStatus {
  DRAFT // Not yet published
  ACTIVE // Published, accepting commitments
  PENDING // Deadline passed, awaiting resolution
  PENDING_APPROVAL // Bot created, awaiting human review
  RESOLVED_CORRECT // Resolved as correct
  RESOLVED_WRONG // Resolved as wrong
  VOID // Invalidated (canceled, rule issues, abuse)
  UNRESOLVABLE // Cannot determine outcome (conflicting sources)
}

model Prediction {
  id String @id @default(cuid())

  // Author
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // News context (optional but encouraged)
  newsAnchorId String?
  newsAnchor   NewsAnchor? @relation(fields: [newsAnchorId], references: [id])

  // Prediction content
  claimText   String  @db.VarChar(500) // The testable statement
  slug        String? @unique // URL-friendly identifier (e.g., "bitcoin-100k-2026")
  detailsText String? @db.Text // Additional conditions/context
  tags        Tag[]

  // Outcome definition
  outcomeType    OutcomeType @default(BINARY)
  outcomePayload Json? // Type-specific data (options, threshold, etc.)

  // Resolution rules
  resolutionRules   String?  @db.Text // How to determine outcome
  resolveByDatetime DateTime // Deadline for resolution

  // Source tracking (e.g. 'bot' for bot-created predictions)
  source      String?          @db.VarChar(50)

  // Status & timestamps
  status           PredictionStatus @default(DRAFT)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  publishedAt      DateTime? // When status changed to ACTIVE
  lockedAt         DateTime? // When first commitment was made
  contextUpdatedAt DateTime? // When the detailsText was last updated via analyze context
  winnersPoolBonus Int @default(0) @map("winners_pool_bonus")

  // Resolution data (filled when resolved)
  resolvedAt        DateTime?
  resolvedById      String?
  resolvedBy        User?     @relation("ResolvedBy", fields: [resolvedById], references: [id])
  resolutionOutcome String?   @db.VarChar(50) // "correct", "wrong", "void", "unresolvable"
  evidenceLinks     Json? // Array of evidence URLs
  resolutionNote    String?   @db.Text

  // Relations
  options      PredictionOption[]
  commitments  Commitment[]
  withdrawals  CommitmentWithdrawal[]
  comments     Comment[]

  @@index([status])
  @@index([authorId])
  @@index([newsAnchorId])
  @@index([resolveByDatetime])
  @@map("predictions")
}

// ============================================
// PREDICTION OPTIONS (for MC/Numeric)
// ============================================

model PredictionOption {
  id String @id @default(cuid())

  predictionId String
  prediction   Prediction @relation(fields: [predictionId], references: [id], onDelete: Cascade)

  text         String @db.VarChar(500)
  displayOrder Int    @default(0)

  // For numeric: threshold value
  numericValue Float?

  // Resolution
  isCorrect Boolean?

  // Relations
  commitments Commitment[]

  @@index([predictionId])
  @@map("prediction_options")
}

// ============================================
// COMMITMENTS (CU Stakes)
// ============================================

model Commitment {
  id String @id @default(cuid())

  // User making commitment
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Prediction being committed to
  predictionId String
  prediction   Prediction @relation(fields: [predictionId], references: [id], onDelete: Cascade)

  // Selected option (for MC/Numeric)
  optionId String?
  option   PredictionOption? @relation(fields: [optionId], references: [id])

  // For binary: true = will happen, false = won't happen
  binaryChoice Boolean?

  // CU committed
  cuCommitted Int // Amount of CU locked
  rsSnapshot  Float // RS at time of commitment

  // Timestamps
  createdAt DateTime @default(now())

  // Result (calculated after resolution)
  cuReturned Int? // CU returned after resolution
  rsChange   Float? // RS delta after resolution

  // Each user can only commit once per prediction
  @@unique([userId, predictionId])
  @@index([predictionId])
  @@index([userId])
  @@map("commitments")
}

// ============================================
// COMMITMENT WITHDRAWALS (Exit penalty tracking)
// ============================================

model CommitmentWithdrawal {
  id           String   @id @default(cuid())

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  predictionId String
  prediction   Prediction @relation(fields: [predictionId], references: [id], onDelete: Cascade)

  cuCommitted  Int // Original committed amount at time of exit
  cuBurned     Int // Amount burned as penalty (goes to winnersPoolBonus)
  cuRefunded   Int // Amount returned immediately (cuCommitted - cuBurned)
  burnRate     Int // Burn rate × 100 (e.g., 25 = 25%)

  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([predictionId])
  @@map("commitment_withdrawals")
}

// ============================================
// CU LEDGER (Transaction history)
// ============================================

enum CuTransactionType {
  INITIAL_GRANT // Signup bonus
  COMMITMENT_LOCK // CU locked for prediction
  COMMITMENT_UNLOCK // CU returned after resolution
  REFUND // CU refunded (void/unresolvable)
  BONUS // Streak/achievement bonus
  ADMIN_ADJUSTMENT // Manual adjustment by admin
  WITHDRAWAL_PENALTY // CU burned as exit penalty (negative)
  WITHDRAWAL_REFUND // CU returned to user on exit after penalty (positive)
  VOID_BURN_REFUND // Burned CU refunded when prediction ends void/unresolvable
}

model CuTransaction {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type   CuTransactionType
  amount Int // Positive = credit, negative = debit

  // Reference to related entity
  referenceId String? @db.VarChar(100) // e.g., commitment_id, prediction_id
  note        String? @db.VarChar(500)

  // Balance after this transaction
  balanceAfter Int

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@map("cu_transactions")
}

// ============================================
// COMMENTS (Discussion system)
// ============================================

model Comment {
  id String @id @default(cuid())

  // Author
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Content
  text String @db.Text

  // Target
  predictionId String?
  prediction   Prediction? @relation(fields: [predictionId], references: [id], onDelete: Cascade)

  // Threading (for replies)
  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Soft delete
  deletedAt DateTime?

  // Relations
  reactions CommentReaction[]

  @@index([predictionId])
  @@index([authorId])
  @@index([parentId])
  @@index([createdAt])
  @@index([predictionId, createdAt])
  @@index([deletedAt])
  @@map("comments")
}

// ============================================
// COMMENT REACTIONS (likes, etc.)
// ============================================

enum ReactionType {
  LIKE
  INSIGHTFUL
  DISAGREE
}

model CommentReaction {
  id String @id @default(cuid())

  // User who reacted
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Comment being reacted to
  commentId String
  comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  // Reaction type
  type ReactionType

  createdAt DateTime @default(now())

  // Each user can only have one reaction per comment
  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
  @@map("comment_reactions")
}

// ============================================
// NOTIFICATIONS
// ============================================

enum NotificationType {
  COMMITMENT_RESOLVED    // Your committed prediction was resolved
  COMMENT_ON_FORECAST    // Someone commented on your forecast
  REPLY_TO_COMMENT       // Someone replied to your comment
  NEW_COMMITMENT         // Someone committed to your forecast
  MENTION                // You were @mentioned in a comment
  SYSTEM                 // System-wide announcement
}

enum NotificationChannel {
  IN_APP
  EMAIL
  BROWSER_PUSH
  TELEGRAM
}

model Notification {
  id String @id @default(cuid())

  // Recipient
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Content
  type    NotificationType
  title   String  @db.VarChar(200)
  message String  @db.Text
  link    String? @db.VarChar(500) // Deep link into the app (e.g., /forecasts/abc)

  // Source references (for deduplication and grouping)
  predictionId String? // Related prediction
  commentId    String? // Related comment
  actorId      String? // User who triggered the notification

  // State
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId, read])
  @@index([userId, createdAt])
  @@index([createdAt])
  @@map("notifications")
}

model NotificationPreference {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Which notification type
  type NotificationType

  // Which channels are enabled for this type
  inApp       Boolean @default(true)
  email       Boolean @default(false)
  browserPush Boolean @default(false)
  telegram    Boolean @default(false)

  @@unique([userId, type])
  @@map("notification_preferences")
}

// ============================================
// PUSH SUBSCRIPTIONS (Browser push per device)
// ============================================

model PushSubscription {
  id         String    @id @default(cuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint   String    @unique @db.VarChar(2000)
  p256dh     String    @db.VarChar(200)
  auth       String    @db.VarChar(100)
  userAgent  String?   @db.VarChar(500)
  createdAt  DateTime  @default(now())
  lastUsedAt DateTime?

  @@index([userId])
  @@map("push_subscriptions")
}

// ============================================
// BOT SYSTEM
// ============================================

enum BotAction {
  CREATED_FORECAST
  VOTED
  SKIPPED
  ERROR
}

model BotConfig {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Persona & prompts (all admin-editable)
  personaPrompt  String @db.Text // Bot's character description
  forecastPrompt String @db.Text // Prompt for creating a forecast from a news item
  votePrompt     String @db.Text // Prompt for deciding whether/how to vote on a forecast

  // News sources (array of RSS URLs)
  newsSources Json // String[]

  // Schedule
  intervalMinutes Int @default(360) // How often to run (in minutes)

  // Activity caps
  maxForecastsPerDay Int @default(3)
  maxVotesPerDay     Int @default(10)

  // Staking
  stakeMin Int @default(10)
  stakeMax Int @default(100)

  // LLM model preference (e.g. "google/gemini-2.0-flash-exp:free")
  modelPreference String @default("google/gemini-2.0-flash-exp:free")

  // Hotness detection thresholds
  hotnessMinSources  Int @default(2) // Min sources to consider hot
  hotnessWindowHours Int @default(6) // Time window for hotness detection

  // Active hours window (UTC). Both null = always active.
  // If set, bot only runs when: hour >= start && hour < end (overnight works: start > end).
  // TODO(stage2-bot-params): enforced in bot-runner.ts runBot()
  activeHoursStart Int?
  activeHoursEnd   Int?

  // Tag focus filter: bot only creates/votes on forecasts with these tags.
  // Empty array = no filter (act on all tags).
  // TODO(stage2-bot-params): enforced in bot-runner.ts processTopics() + runVoting()
  tagFilter Json @default("[]") // String[]

  // Vote bias 0–100: 0 = lean NO, 50 = neutral, 100 = lean YES.
  // Injected into votePrompt at runtime.
  // TODO(stage2-bot-params): injected in bot-runner.ts runVoting() LLM prompt
  voteBias Int @default(50)

  // CU auto-refill: when bot's cuAvailable drops to/below cuRefillAt,
  // grant cuRefillAmount CU. cuRefillAt = 0 disables auto-refill.
  // TODO(stage2-bot-params): enforced in bot-runner.ts before each stake
  cuRefillAt     Int @default(0)
  cuRefillAmount Int @default(50)

  // Enabled action flags — disable phases without removing the bot.
  // TODO(stage2-bot-params): guarded at start of each phase in bot-runner.ts
  canCreateForecasts Boolean @default(true)
  canVote            Boolean @default(true)

  // Auto-approve: if true, bot forecasts go directly to ACTIVE (skip PENDING_APPROVAL).
  autoApprove Boolean @default(false)

  isActive  Boolean   @default(true)
  lastRunAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  runLogs BotRunLog[]

  @@map("bot_configs")
}

model BotRunLog {
  id    String    @id @default(cuid())
  botId String
  bot   BotConfig @relation(fields: [botId], references: [id], onDelete: Cascade)

  runAt         DateTime  @default(now())
  action        BotAction
  triggerNews   Json?     // { title, url, sources: string[] }
  generatedText String?   @db.Text // LLM-generated forecast text (for review)
  forecastId    String?   // Prediction ID if forecast was created
  isDryRun      Boolean   @default(false)
  error         String?   @db.Text

  @@index([botId])
  @@index([runAt])
  @@map("bot_run_logs")
}
