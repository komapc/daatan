#!/bin/bash
# Pre-commit hook: fast checks only (lint + version bump check)
# Full build + tests run on pre-push

set -e

echo "ğŸ” Running pre-commit checks..."

# Check version bump for feature/fix branches
./scripts/check-version-bump.sh || exit 1

# Lint check (fast)
echo "ğŸ” Running linter..."
if ! npm run lint; then
  echo "âŒ Lint failed. Please fix lint errors before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
